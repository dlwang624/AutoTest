$(function(){
	var msg = $("#msg").val();
	if(msg!=""){
		layer.alert(msg);
	}
	$("#projectid").change(function(){
		if($(this).val()=="请选择文件夹名"){
			layer.tips('请选择文件夹名', "#projectid",{tips:[2,'#C00']});
			return;
		}
		$("#testName").val("");
		$("#expect").html("");
		$(".expect").hide();
	});
	
	$("#testName").keyup(function(){
		var proid = $("#projectid").val();
		if(proid=="请选择文件夹名"){
			layer.tips('请选择文件夹名', "#projectid",{tips:[2,'#C00']});
			return;
		}
		var flag = $(".expect").is(':hidden');
		if(flag){
			$(".expect").show();
		}
		var tName = $(this).val();
		if(tName==""){
			$("#expect").html("");
			$(".expect").hide();
		}
		if(tName.replace(/\s+/g, "").length!=0){
			$.ajax({
			  type: 'POST',
			  url: "CMS/expectTest.htm",
			  data:{"tName":tName,"proid":proid},
			  dataType: "json",
			  success: function(data){
				  $("#expect").html("");
				  $('#expectTemplate').tmpl(data.tests).appendTo('#expect');
			  },
			  error: function (xhr, status, text) {
		          switch (status) {
		             case 404:
		                 console.log("File not found");
		                 break;
		             case 500:
		                 console.log("Server error");
		                 break;
		             case 0:
		                 console.log("Request aborted");
		                 break;
		             default:
		            	 var msg = 'Unknown error: ' + status + " " + text + "\n"
		            	 		+ "readyState: " + xhr.readyState + "\n"
		            	 		+ "responseText: "+ xhr.responseText + "\n"
		            	 		+ "status: " + xhr.status + "\n"
		            	 console.log(msg);
		            }
		        }
			});
		}
	});
	
	$("#filename").change(function(){
		var proid = $("#projectid").val();
		var testID = $("#testID").val();
		var testName = $("#testName").val();
		var filename = $("#filename").val();
		if("请选择文件夹名"==proid){
			layer.alert("请选择文件夹名");
			return false;
		}
		if(""==testID||""==testName){
			layer.alert("请选择用例名");
			return false;
		}
		if(""==filename){
			layer.alert("请选择上传数据文件");
			return false;
		}
		$("#filedata").submit();
	});
});